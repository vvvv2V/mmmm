# ========== SERVER ==========
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# ========== DATABASE ==========
DATABASE_PATH=./backend_data/database.db
DATABASE_URL=sqlite:./backend_data/database.db

# ========== JWT AUTHENTICATION ==========
JWT_SECRET=your-secret-key-here-min-32-chars-long
JWT_EXPIRES_IN=7d

# ========== STRIPE PAYMENTS ==========
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Subscription Price IDs (from Stripe Dashboard)
STRIPE_PRICE_ID_BRONZE=price_xxx_bronze
STRIPE_PRICE_ID_SILVER=price_xxx_silver
STRIPE_PRICE_ID_GOLD=price_xxx_gold

# ========== EMAIL SERVICE (Nodemailer) ==========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@myservice.com

# ========== WEB PUSH NOTIFICATIONS ==========
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# ========== GOOGLE MAPS API ==========
GOOGLE_MAPS_API_KEY=AIza...xxx

# ========== OAUTH 2.0 PROVIDERS ==========
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

GITHUB_CLIENT_ID=xxx
GITHUB_CLIENT_SECRET=xxx
GITHUB_REDIRECT_URI=http://localhost:3001/auth/github/callback

# ========== EXTERNAL SERVICES ==========
# Sentry (Error Tracking)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# SendGrid (Email API)
SENDGRID_API_KEY=SG.xxx

# Firebase Cloud Messaging (Push Notifications)
FCM_API_KEY=xxx

# ========== PIX (Brazilian Payment) ==========
PIX_API_KEY=xxx
PIX_API_SECRET=xxx

# ========== FEATURE FLAGS ==========
ENABLE_LOYALTY_SYSTEM=true
ENABLE_ADDONS_MARKETPLACE=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_GEOLOCATION=true
ENABLE_HOURLY_BOOKING=true
ENABLE_BLOG=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_QUEUE=true

# ========== SECURITY ==========
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX_REQUESTS=100

# ========== LOGGING ==========
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ========== ADMIN PANEL ==========
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD_INITIAL=ChangeMe123!
